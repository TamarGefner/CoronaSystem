<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CoronaSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CoronaSystem.styles.css" asp-append-version="true" />
    <style>
        .blue-dot {
            display: inline-block;
            width: 17px; /* Adjust size as needed */
            height: 17px; /* Adjust size as needed */
            background-color: rgb(54, 162, 235);
            border-radius: 50%;
            margin-right: 10px; /* Adjust spacing as needed */
        }

        .yellow-dot {
            display: inline-block;
            width: 12px; /* Adjust size as needed */
            height: 12px; /* Adjust size as needed */
            background-color: rgb(255, 206, 86);
            border-radius: 50%;
            margin-right: 25px; /* Adjust spacing as needed */
        }

        .navbar-brand {
            color: blue;
            font-weight: bold;
        }

            .navbar-brand:hover {
                color: yellow;
            }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light" style="background-color:lightblue">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    Corona System
                    
                    <span class="blue-dot"></span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home
                                
                                <span class="yellow-dot"></span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
       @*  <div class="container">
            &copy; 2024 - CoronaSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div> *@
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
