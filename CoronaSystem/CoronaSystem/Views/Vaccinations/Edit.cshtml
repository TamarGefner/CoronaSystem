</head>
<body>
    <h1> <span class="blue-dot"> <span class="yellow-dot"></span></span>Edit Vaccination<span class="yellow-dot"><span class="blue-dot"></span></h1>
    <!-- "Back to List" link with icon -->
    <a asp-action="Index" asp-route-IdNumber="@ViewData["IdNumber"]">
        <i class="fas fa-arrow-left"></i> <!-- Font Awesome back icon -->
    </a>
    <br />
    <br />
    <div class="form-container">
        <div class="row">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="IdNumber" class="control-label">ID:</label>
                            <input asp-for="IdNumber" class="form-control" readonly />
                            <span asp-validation-for="IdNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="ReleaseDate" class="control-label">Date of receiving the vaccine:</label>
                            <input asp-for="ReleaseDate" class="form-control" />
                            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Manufacturer" class="control-label">Manufacturer:</label>
                            <input asp-for="Manufacturer" class="form-control" />
                            <span asp-validation-for="Manufacturer" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>

            </form>

        </div>
    </div>


    <div>
    </div>
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
